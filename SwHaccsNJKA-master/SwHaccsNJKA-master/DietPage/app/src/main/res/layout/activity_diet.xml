<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.koenf.dietpage.DietActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Fish"
        android:layout_width="119dp"
        android:layout_height="105dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fish" android:contentDescription="TODO" android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/fishButton"
        android:layout_width="125dp"
        android:layout_height="38dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="32dp"
        android:text="@string/non_specific"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fish"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Cow"
        android:layout_width="121dp"
        android:layout_height="104dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/cowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Fish"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cow" android:contentDescription="TODO" />

    <Button
        android:id="@+id/cowButton"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="1dp"
        android:text="@string/paleolithic"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fishButton"
        app:layout_constraintTop_toBottomOf="@+id/Cow" />

    <ImageButton
        android:id="@+id/Veg"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475"
        app:srcCompat="@drawable/veg"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/vegButton"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="218dp"
        android:layout_marginStart="38dp"
        android:text="@string/vegetarian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Veg"
        tools:ignore="RtlCompat"
        android:layout_marginRight="218dp" />

    <Button
        android:id="@+id/oilButton"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="50dp"
        android:text="@string/ketogenic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vegButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/oilButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/cowButton"
        app:srcCompat="@drawable/oil2" />

    <Button
        android:id="@+id/nonButton"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginBottom="477dp"
        android:layout_marginStart="12dp"
        android:text="?"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Cow"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
